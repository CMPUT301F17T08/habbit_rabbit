<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/follow_person_button"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/plus_sign"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="People"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/follow_person_button"
            app:layout_constraintStart_toEndOf="@+id/menu_button"/>

        <Button
            android:id="@+id/menu_button"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="0.00"
            android:background="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/textView3"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="FOLLOWING"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"

        app:layout_constraintBottom_toBottomOf="@id/menu_button"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/people_recyclerview"
        android:layout_width="300dp"
        android:layout_height="219dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/textView3"/>

    <TextView
        android:id="@+id/textView4"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="FOLLOWERS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/people_recyclerview"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/people_recyclerview2"
        android:layout_width="303dp"
        android:layout_height="232dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="@id/textView3"


        />

</LinearLayout>
